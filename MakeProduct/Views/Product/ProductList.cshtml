@model IEnumerable<Product>

@{
    ViewBag.Title = "產品列表";
}

<div class="card-deck">
    @foreach (var product in Model)
    {
        <div class="card m-3">
            <div class="card-header">
                <h3>@product.ProductName</h3>
            </div>

            <img src="~/images/Pikachu.png" class="card-img-top"/>

            <div class="card-footer text-center">
                <a asp-controller="Product" asp-action="ProductDetail" asp-route-id="@product.Id" class="btn btn-primary">查看</a>
                <a asp-controller="Product" asp-action="UpdateProduct" asp-route-id="@product.Id" class="btn btn-danger">編輯</a>
                <a asp-controller="Product" asp-action="DeleteProduct" asp-route-id="@product.Id" class="btn btn-danger">刪除</a>
            </div>
        </div>
    }
</div>